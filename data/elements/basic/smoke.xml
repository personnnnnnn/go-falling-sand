<element name="smoke">
  <display>
    <color>#dddddd</color>
    <name>Smoke</name>
    <selectable>true</selectable>
  </display>
  <gas>
    <weight>0.001</weight>
  </gas>
  <material>
    <density>0.005</density>
  </material>
  <reactions>
    <reaction>
      <any>
        <all>
          <chance>.75</chance>
          <directly-touching>plant</directly-touching>
        </all>
        <directly-touching>plant</directly-touching>
      </any>
      <turn-into>air</turn-into>
      <end />
    </reaction>
    <reaction>
      <directly-touching>plant</directly-touching>
      <turn-into>plant</turn-into>
      <end />
    </reaction>
  </reactions>
</element>