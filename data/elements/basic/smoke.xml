<element name="smoke">
  <display>
    <color>#dddddd</color>
    <name>Smoke</name>
    <selectable>true</selectable>
  </display>
  <gas>
    <weight>0.001</weight>
  </gas>
  <material>
    <density>0.005</density>
  </material>
  <reactions>
    <reaction>
      <directly-touching>plant</directly-touching>
      <chance>.75</chance>
      <turn-into>air</turn-into>
    </reaction>
    <reaction>
      <directly-touching>plant</directly-touching>
      <chance>.25</chance>
      <turn-into>plant</turn-into>
    </reaction>
    <reaction>
      <directly-touching>carbon-scrubber</directly-touching>
      <turn-into>air</turn-into>
    </reaction>
  </reactions>
</element>