<elements>
  <element name="air" role="air">
    <gas>
      <weight>0.1</weight>
    </gas>
    <material>
      <density>0.01</density>
    </material>
    <display>
      <color>white</color>
      <name>Air</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="wall" role="wall">
    <immovable-solid />
    <material>
      <density>100000</density>
    </material>
    <display>
      <color>black</color>
      <name>Wall</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="sand">
    <movable-solid />
    <material>
      <density>5</density>
    </material>
    <display>
      <color>yellow</color>
      <name>Sand</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="water">
    <liquid />
    <material>
      <density>1</density>
    </material>
    <display>
      <color>blue</color>
      <name>Water</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="oil">
    <liquid />
    <material>
      <density>0.1</density>
    </material>
    <display>
      <color>#88FF00</color>
      <name>Oil</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="dust">
    <dust>
      <weight>0.5</weight>
    </dust>
    <material>
      <density>0.5</density>
    </material>
    <display>
      <color>grey</color>
      <name>Dust</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="steam">
    <display>
      <color>cyan</color>
      <name>Steam</name>
      <selectable>true</selectable>
    </display>

    <gas>
      <weight>0.001</weight>
    </gas>

    <material>
      <density>0.005</density>
    </material>

    <reactions>
      <reaction>
        <chance>.001</chance>
        <turn-into>water</turn-into>
      </reaction>
    </reactions>

  </element>

  <element name="fire">

  </element>
</elements>