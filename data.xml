<elements xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="elements.xsd">
  <element name="air" role="air">
    <gas>
      <weight>0.1</weight>
    </gas>
    <material>
      <density>0.01</density>
    </material>
    <display>
      <color>white</color>
      <name>Air</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="wall" role="wall">
    <immovable-solid />
    <material>
      <density>100000</density>
    </material>
    <display>
      <color>black</color>
      <name>Wall</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="sand">
    <movable-solid />
    <material>
      <density>5</density>
    </material>
    <display>
      <color>yellow</color>
      <name>Sand</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="water">
    <liquid />
    <material>
      <density>1</density>
    </material>
    <display>
      <color>blue</color>
      <name>Water</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="oil">
    <liquid />
    <material>
      <density>0.1</density>
    </material>
    <display>
      <color>#88FF00</color>
      <name>Oil</name>
      <selectable>true</selectable>
    </display>
    <reactions>
      <reaction>
        <touching>fire</touching>
        <chance>.13</chance>
        <turn-into>fire</turn-into>
      </reaction>
    </reactions>
  </element>

  <element name="dust">
    <dust>
      <weight>0.5</weight>
    </dust>
    <material>
      <density>0.5</density>
    </material>
    <display>
      <color>grey</color>
      <name>Dust</name>
      <selectable>true</selectable>
    </display>
  </element>

  <element name="steam">
    <display>
      <color>cyan</color>
      <name>Steam</name>
      <selectable>true</selectable>
    </display>

    <gas>
      <weight>0.001</weight>
    </gas>

    <material>
      <density>0.005</density>
    </material>

    <reactions>
      <reaction>
        <chance>.001</chance>
        <turn-into>water</turn-into>
      </reaction>
    </reactions>

  </element>

  <element name="smoke">
    <display>
      <color>#dddddd</color>
      <name>Smoke</name>
      <selectable>true</selectable>
    </display>

    <gas>
      <weight>0.001</weight>
    </gas>

    <material>
      <density>0.005</density>
    </material>

    <reactions>
      <reaction>
        <directly-touching>plant</directly-touching>
        <chance>.75</chance>
        <turn-into>air</turn-into>
      </reaction>
      <reaction>
        <directly-touching>plant</directly-touching>
        <chance>.25</chance>
        <turn-into>plant</turn-into>
      </reaction>
      <reaction>
        <directly-touching>carbon-scrubber</directly-touching>
        <turn-into>air</turn-into>
      </reaction>
    </reactions>
  </element>

  <element name="fire">
    <display>
      <color>orange</color>
      <name>Fire</name>
      <selectable>true</selectable>
    </display>
    <gas>
      <weight>0</weight>
    </gas>
    <material>
      <density>0</density>
    </material>
    <reactions>
      <reaction>
        <chance>.025</chance>
        <turn-into>smoke</turn-into>
      </reaction>
      <reaction>
        <chance>.025</chance>
        <turn-into>air</turn-into>
      </reaction>
    </reactions>
  </element>

  <element name="wood">
    <display>
      <name>Wood</name>
      <color>brown</color>
      <selectable>true</selectable>
    </display>
    <immovable-solid />
    <material>
      <density>7.5</density>
    </material>
    <reactions>
      <reaction>
        <touching>fire</touching>
        <chance>.25</chance>
        <turn-into>fire</turn-into>
      </reaction>
    </reactions>
  </element>

  <element name="wax">
    <display>
      <name>Wax</name>
      <color>#F2E69C</color>
      <selectable>true</selectable>
    </display>
    <movable-solid />
    <material>
      <density>5</density>
    </material>
    <reactions>
      <reaction>
        <touching>fire</touching>
        <emit>fire</emit>
      </reaction>
      <reaction>
        <touching>fire</touching>
        <chance>.01</chance>
        <turn-into>fire</turn-into>
      </reaction>
    </reactions>
  </element>

  <element name="plant">
    <display>
      <name>Plant</name>
      <color>green</color>
      <selectable>true</selectable>
    </display>
    <immovable-solid />
    <material>
      <density>4</density>
    </material>
    <reactions>
      <reaction>
        <chance>.1</chance>
        <touching>fire</touching>
        <turn-into>fire</turn-into>
      </reaction>
    </reactions>
  </element>

  <element name="carbon-scrubber">
    <display>
      <name>Carbon Scrubber</name>
      <color>#556655</color>
      <selectable>true</selectable>
    </display>
    <immovable-solid />
    <material>
      <density>10</density>
    </material>
  </element>

  <element name="netherrack">
    <display>
      <name>Netherrack</name>
      <color>#aa0000</color>
      <selectable>true</selectable>
    </display>
    <immovable-solid />
    <material>
      <density>4</density>
    </material>
    <reactions>
      <reaction>
        <touching>fire</touching>
        <emit>fire</emit>
      </reaction>
    </reactions>
  </element>
</elements>